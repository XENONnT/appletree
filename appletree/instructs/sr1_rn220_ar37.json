            },

            "data_file_name": "data_Ar37.csv",
            "bins_type": "equiprob",
            "bins_on": ["cs1", "cs2"],
            "bins": [20, 20],
            "x_clip": [0, 50],
            "y_clip": [1250, 2200],
            "parameter_alias": {
                "s1_cut_acc_sigma_ar37": "s1_cut_acc_sigma",
