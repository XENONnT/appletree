            "x_clip": [0, 100],
            "y_clip": [1e2, 1e4],
            "parameter_alias": {
                "s1_cut_acc_sigma_rn220": "s1_cut_acc_sigma",
                "s2_cut_acc_sigma_rn220": "s2_cut_acc_sigma"
